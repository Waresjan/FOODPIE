<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/fanhui"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnfanhui"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_back_dark"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="登录"
        android:gravity="center_vertical"
        android:textSize="20dp"/>
</LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:text="不用注册,用一下的账号直接登录"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_login_qq"
            android:button="@null"
            android:text="QQ"
            android:gravity="center"/>


        <ImageButton
            android:id="@+id/weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_login_wechat"
            android:button="@null"
            android:text="微信"

            android:gravity="center"/>


        <ImageButton
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_login_weibo"
            android:button="@null"
            android:text="微博"
            android:gravity="center"/>


        <ImageButton
            android:id="@+id/bohe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_login_boohee"
            android:button="@null"
            android:text="薄荷"
            android:gravity="center"/>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/img_tomato_bread">

    </FrameLayout>


</LinearLayout>
